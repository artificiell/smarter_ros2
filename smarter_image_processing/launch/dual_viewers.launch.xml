<launch>

  <!-- Camera drive node -->
  <include file="$(find-pkg-share usb_cam)/launch/camera.launch.py"/>

  <!-- First image viewer node -->
  <node pkg="image_tools" exec="showimage" name="image_viwever_1">
    <remap from="/image" to="/camera1/image_raw"/>
    <param name="autosize" value="true"/>
  </node>

  <!-- Second image viewer node -->
  <node pkg="image_tools" exec="showimage" name="image_viwever_2">
    <remap from="/image" to="/camera1/image_raw"/>
    <param name="autosize" value="true"/>
  </node>

</launch>
